<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/creationLayout"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCharacter">

    <EditText
        android:id="@+id/etCharacterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="Character Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="84dp"
        android:layout_marginTop="33dp"
        android:text="Select Character"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCharacterName"
        android:layout_marginEnd="103dp" />

    <Button
        android:id="@+id/btnStartGame"
        android:onClick="startGame"
        android:layout_width="163dp"
        android:layout_height="49dp"
        android:layout_marginBottom="31dp"
        android:layout_marginRight="110dp"
        android:text="Start Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="110dp" />

    <ScrollView
        android:id="@+id/vCharacterScroll"
        android:layout_width="140dp"
        android:layout_height="290dp"
        android:layout_marginRight="122dp"
        android:layout_marginTop="23dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ivMan1"
                        android:layout_width="142dp"
                        android:layout_height="132dp"
                        android:onClick="characterSeleted"
                        android:scaleType="fitCenter"
                        tools:layout_editor_absoluteX="29dp"
                        tools:layout_editor_absoluteY="312dp" />

                    <ImageView
                        android:id="@+id/iFrameMan1"
                        android:layout_width="123dp"
                        android:layout_height="137dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        tools:layout_editor_absoluteX="127dp"
                        tools:layout_editor_absoluteY="176dp" />

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ivWoman1"
                        android:layout_width="142dp"
                        android:layout_height="132dp"
                        android:onClick="characterSeleted"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/woman1"
                        tools:layout_editor_absoluteX="29dp"
                        tools:layout_editor_absoluteY="312dp" />

                    <ImageView
                        android:id="@+id/iFrameWoman1"
                        android:layout_width="123dp"
                        android:layout_height="137dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        tools:layout_editor_absoluteX="127dp"
                        tools:layout_editor_absoluteY="176dp" />

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ivMan2"
                        android:layout_width="142dp"
                        android:layout_height="132dp"
                        android:onClick="characterSeleted"
                        android:scaleType="fitCenter"
                        tools:layout_editor_absoluteX="29dp"
                        tools:layout_editor_absoluteY="312dp" />

                    <ImageView
                        android:id="@+id/iFrameMan2"
                        android:layout_width="123dp"
                        android:layout_height="137dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        tools:layout_editor_absoluteX="127dp"
                        tools:layout_editor_absoluteY="176dp" />

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ivWoman2"
                        android:layout_width="142dp"
                        android:layout_height="132dp"
                        android:onClick="characterSeleted"
                        android:scaleType="fitCenter"
                        tools:layout_editor_absoluteX="29dp"
                        tools:layout_editor_absoluteY="312dp" />

                    <ImageView
                        android:id="@+id/iFrameWoman2"
                        android:layout_width="123dp"
                        android:layout_height="137dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        tools:layout_editor_absoluteX="127dp"
                        tools:layout_editor_absoluteY="176dp" />

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ivMan3"
                        android:layout_width="142dp"
                        android:layout_height="132dp"
                        android:onClick="characterSeleted"
                        android:scaleType="fitCenter"
                        tools:layout_editor_absoluteX="29dp"
                        tools:layout_editor_absoluteY="312dp" />

                    <ImageView
                        android:id="@+id/iFrameMan3"
                        android:layout_width="123dp"
                        android:layout_height="137dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        tools:layout_editor_absoluteX="127dp"
                        tools:layout_editor_absoluteY="176dp" />

                </RelativeLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
