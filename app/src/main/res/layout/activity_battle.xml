<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/battle_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/battle_mainFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/battle_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/battle_player"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"/>

        <ImageView
            android:id="@+id/battle_enemy"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:scaleType="fitCenter"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/battle_statusFrame"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/battle_health_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@mipmap/ic_launcher_round"/>

        <ProgressBar
            android:id="@+id/battle_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@mipmap/ic_home_black_24dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/battle_actionFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/battle_primaryActionFrame"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/battle_action_attack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Attack"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/battle_action_magic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Retreat"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/battle_action_items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Weapons"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/battle_action_flee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Escape"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/battle_loadingIndicatgor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/battle_message"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:maxLines="2"
            android:textSize="20sp"
            tools:text="Enemy Killed!"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/battle_action_recycler"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>